<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/upload_photo_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="20dp"
        android:paddingTop="12dp"
        android:background="@drawable/button_with_radius"
        android:drawableTop="@drawable/ic_baseline_photo_library_36"
        android:text="@string/upload_photo_label"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/upload_video_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="20dp"
        android:paddingTop="12dp"
        android:background="@drawable/button_with_radius"
        android:drawableTop="@drawable/ic_baseline_video_library_36"
        android:text="@string/upload_video_label"/>

</LinearLayout>