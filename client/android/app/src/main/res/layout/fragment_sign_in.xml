<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_sign_in_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/app_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sign_in_main_layout"
        app:layout_constraintVertical_chainStyle="packed"
        >
        <ImageView
            android:id="@+id/app_logo_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_baseline_pets_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/app_logo_name"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/app_logo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Pet-Management"
            android:textSize="28dp"
            app:layout_constraintStart_toEndOf="@id/app_logo_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/sign_in_main_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="320dp"
            android:layout_height="140dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp">

                <RelativeLayout
                    android:id="@+id/id_pw_edit_text_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/sign_in_button_layout"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <EditText
                        android:id="@+id/id_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:drawableStart="@drawable/ic_baseline_person_24"
                        android:drawablePadding="4dp"
                        android:inputType="textPersonName"
                        android:hint="@string/id_hint"
                        android:theme="@style/onSelectedThemeCarrot"/>

                    <EditText
                        android:id="@+id/pw_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:drawableStart="@drawable/ic_baseline_lock_24"
                        android:drawablePadding="4dp"
                        android:inputType="textPassword"
                        android:hint="@string/pw_hint"
                        android:theme="@style/onSelectedThemeCarrot"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/sign_in_button_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/id_pw_edit_text_layout"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <Button
                        android:id="@+id/sign_in_button"
                        android:layout_width="80dp"
                        android:layout_height="90dp"
                        android:layout_centerInParent="true"
                        android:text="@string/sign_in_button"
                        android:textStyle="bold"
                        android:textSize="16dp"/>

                    <ProgressBar
                        android:id="@+id/sign_in_progress_bar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:indeterminateTint="@color/carrot"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/sign_up_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/sign_up_button"
                android:background="?attr/selectableItemBackground"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/divider"/>

            <TextView
                android:id="@+id/id_pw_find_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/id_pw_find_button"
                android:background="?attr/selectableItemBackground"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>